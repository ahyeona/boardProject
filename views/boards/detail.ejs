<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>상세</title>
</head>

<body>
    <div>
        <div>
            <!-- 제목 -->
            <h1>
                <%= data.title %>
            </h1>
        </div>
        <div>
            <!-- 내용 -->
            <p>
                <%= data.content %>
            </p>
        </div>
        <div>
            <!-- 작성자 -->
            <p>
                <%= data.writer %>
            </p>
            <!-- 작성시간 -->
            <p>
                <%= data.time %>
            </p>
            <!-- 좋아요 -->
            <p>
                <%= data.likes %>
            </p>
        </div>
        <div>
            <!-- 댓글 등록 -->
            <form action="/boards/add_comment" method="post">
                <label for="">내용</label>
                <input type="text" name="content">
                <label for="">작성자</label>
                <input type="text" name="name">
                <button>댓글등록</button>
            </form>
        </div>
        <div>
            <% comment.forEach((el,index)=> { %>
                <div>
                    <!-- 댓글내용 -->
                    <%= el.content %>
                        <!-- 댓글작성자 -->
                        <%= el.name %>
                            <!-- 댓글작성시간 -->
                            <%= el.time %>
                </div>
                <% }); %>
        </div>
    </div>
</body>

</html>